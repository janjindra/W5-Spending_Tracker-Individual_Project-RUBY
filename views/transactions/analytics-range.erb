<h2>Your Analytics</h2>

<div class="background">

  <div class="container">
    <ul id="filter-barul">
      <%  for tag in @tags %>
    <li id="filter-barli"><a id="filter-bara" href="/transactions/analytics/tag/<%= tag.label %>/table"><%= tag.label.capitalize  %>
    </a></li>
      <% end %>
    </ul>
  </div>
<br>
  <div class="container">
    <ul id="filter-barul">
    <%  for yearmonth in @yearmonths %>
    <li id="filter-barli"><a id="filter-bara"href="/transactions/analytics/month/<%=yearmonth%>/table"><%= (yearmonth.split('/').first).concat(" ",Date::MONTHNAMES[(yearmonth.split('/').last).to_i])  %>
    </a></li>
    <% end %>
    </ul>
  </div>
  <br>
  <div class="container">
    <ul id="filter-barul">
      <li id="filter-barli"><a id="filter-bara" href="/transactions/analytics/allbytime">ALL TRANSACTIONS BY TIME
      </a></li>
      </ul>
    </div>
</div>

<br>
    <div class="container">
<form method="post" action="/transactions/analytics/range">
    <label for="date1">From&nbsp</label>
    <input id="mainselection2" name="date1" type="date"  value="date1">

    <label for="date2">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp To &nbsp</label>
    <input id="mainselection2" name="date2"type="date"  value="date2">

    <input id="new_button" type="submit"  value="Filter" style="height:25px; width:150px">
</form>
<br>
</div>

<br><br>

<table>
  <tr>
    <th>Merchant logo</th>
    <th>Merchant Name</th>
    <th>Amount</th>
    <th>Time</th>
    <th>Category</th>
    <th>Category logo</th>

  </tr>
  <% for transaction in @trans_per_range %>
  <tr>
    <td><img src="<%= transaction.merchant.logo %>" alt="Merchant Logo" width="30" height="30"></td>
    <td><%= transaction.merchant.name %></td>
    <td><%= transaction.amount %></td>
    <td><%= transaction.time %></td>
    <td><%= transaction.tag.label %></td>
    <td><img src="<%= transaction.tag.logo %>" alt="Tag Logo" width="30" height="30"></td>
  </tr>
  <% end %>
</table>
<table class="tfooter"><tfoot><th>Range total: £<%=@total_by_month%><br>
Monthly Budget: £<%=@budget%></th></tfoot></table><br>
<table class="tfooter"><tfoot><th><font color="red"><%=@message%></font></th></tfoot></table>

