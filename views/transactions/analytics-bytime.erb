<h2>Your Analytics</h2>

<table>
  <tr><p>Filter by:</p>
    <td><form method="get" action="/transactions/analytics/allbytime">
    <input type="submit"  value="ALL TRANSACTION BY TIME">
    </form>
  </td>
  <%  for month in @month_names %>
    <td>
      <form method="get" action="/transactions/analytics/month/<%=Date::MONTHNAMES.index(month).to_s%>/table">
      <input type="submit"  value="<%= month %>">
      </form>
  <% end %>
    </td>
  </tr>
</table>
<br>

<table>
  <tr>
    <th>Merchant logo</th>
    <th>Merchant Name</th>
    <th>Amount</th>
    <th>Time</th>
    <th>Category</th>
    <th>Category logo</th>

  </tr>
  <% for item in @transactions_by_time %>
  <tr>
    <td><img src="<%= item['m_logo'] %>" alt="Merchant Logo"></td>
    <td><%= item['merchant_name'] %></td>
    <td><%= item['amount'] %></td>
    <td><%= item['time'] %></td>
    <td><%= item['label'] %></td>
    <td><img src="<%= item['t_logo'] %>" alt="Tag Logo"></td>
  </tr>
  <% end %>
</table>
